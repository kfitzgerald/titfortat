{% extends 'base.twig' %}

{% block title %}My Account{% endblock %}

{% block headerText %}My Account{% endblock %}

{% block content %}
    <div class="page-header">
        <h3>Addresses</h3>
    </div>
    <div class="panel panel-default">
        <table class="table">
            <tbody class="table-hover">
                <tr>
                    <td><label for="tit-address">Tit:</label></td>
                    <td><span id="tit-address">{{ user.addresses['titcoin'].address }}</span></td>
                </tr>
                <tr>
                    <td><label for="tat-address">Tat:</label></td>
                    <td><span id="tat-address">{{ user.addresses['tatcoin'].address }}</span></td>
                </tr>
                <tr>
                    <td><label for="bit-address">Bit:</label></td>
                    <td><span id="bit-address">{{ user.addresses['bitcoin'].address }}</span></td>
                </tr>
                <tr>
                    <td><label for="doge-address">Doge:</label></td>
                    <td><span id="doge-address">{{ user.addresses['dogecoin'].address }}</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="page-header">
        <h3>Trade</h3>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Buy</h4>
                </div>
                <div class="panel-body">
                    <form id="buy-form">
                        <div class="input-group">
                            <input type="text" id="buy-amount-field" class="form-control" placeholder="Amount" style="width:50%;" />
                            <input type="text" id="buy-rate-field" class="form-control" placeholder="Rate" style="width:50%;" />
                            <div class="input-group-btn">
                                <button type="submit" id="buy-form-button" class="btn btn-default">Buy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Sell</h4>
                </div>
                <div class="panel-body">
                    <form id="sell-form">
                        <div class="input-group">
                            <input type="text" id="sell-amount-field" class="form-control" placeholder="Amount" style="width:50%;" />
                            <input type="text" id="sell-rate-field" class="form-control" placeholder="Rate" style="width:50%;" />
                            <div class="input-group-btn">
                                <button type="submit" id="sell-form-button" class="btn btn-default">Sell</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="page-header">
        <h3>Orders</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Buy</h4>
                </div>
                <div class="panel-body">
                    <ul id='buy-orders' class="list-group">

                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Sell</h4>
                </div>
                <div class="panel-body">
                    <ul id='sell-orders' class="list-group">

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-header">
        <h3>Recent</h3>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <ul class="list-group">

            </ul>
        </div>
    </div>
{% endblock %}